@model IEnumerable<SchulungQotd.Shared.Models.AuthorViewModel>


<p>
    <a asp-action="Create" class="btn btn-success mb-3">Neuer Autor</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Photo</th>
            <th>Name</th>
            <th>Beschreibung</th>
            <th>Geburtsdatum</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>
                    <image-data-uri
                        image="@author.Photo"
                        image-mime-type="@author.PhotoMimeType"
                        width="120">
                    </image-data-uri>
                </td>
                <td>@author.Name</td>
                <td>@author.Description</td>
                <td>@author.BirthDate</td>
                <td>
                    <!-- Aktionen -->
                    <a asp-action="Details" asp-route-id="@author.Id" class="btn btn-info"><i class="bi bi-info-circle-fill"></i></a>
                    <a asp-action="Delete" asp-route-id="@author.Id" class="btn btn-danger"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>